@using mvc_net_Crm.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Departman Listesi</h2>
<table class="table table-striped table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Departman Adi</th>
        <th>Durum</th>
        <th>Detaylar</th>
        <th style="width: 150px" align="right">#</th>
        <th style="width: 150px">#</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.Departmanid
            </td>
            <td>
                @k.DepartmanAd
            </td>
            <td>
                @k.Durum
            </td>
            <td align="center">
                <a href="/Departman/DepartmanDetay/@k.Departmanid" class="btn btn-success"><i class="fas fa-database"></i> Detaylar</a>
            </td>
            <td align="center">
                <a href="/Departman/DepartmanGetir/@k.Departmanid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/Departman/DepartmanSil/@k.Departmanid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>
