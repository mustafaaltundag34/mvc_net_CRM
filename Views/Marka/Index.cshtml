@using mvc_net_Crm.Models.Siniflar
@model List<Marka>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Marka Listesi</h2>
<br />
<table class="table table-striped table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Marka Adi</th>
        <th>Durum</th>
        <th style="width: 150px" align="center">#</th>
        <th style="width: 150px" align="center">#</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.MarkaID
            </td>
            <td>
                @k.MarkaAd
            </td>
            <td>
                @k.Durum
            </td>
            <td align="center">
                <a href="/Marka/MarkaGetir/@k.MarkaID" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/Marka/MarkaSil/@k.MarkaID" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Marka/MarkaEkle" class="btn btn-primary">Marka Ekle</a>
