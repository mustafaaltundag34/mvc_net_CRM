@using mvc_net_Crm.Models.Siniflar
@model List<TransactionTask>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2><span style="color:red">.|Transaction Loglari  </span> .|Tum Transaction Islem Onaylari</h2>
<br />

<table id="tbl1" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>BelgeID</th>
            <th>BelgeTuru</th>
            <th>AcilisTarihi</th>
            <th>KayitAcan</th>
            <th>OnayVeren/Kaldiran</th>
            <th>KayitStatusu</th>
            <th>SonIslemTarihi</th>
            <th style="width: 150px">#</th>
            <th style="width: 150px">#</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.TransactionTaskid</td>
            <td>@k.Belgeid</td>
            <td>@k.BelgeTuru</td>
            @*<td>@k.AcilisTarihi.ToString("dd.MM.yyyy")</td>*@
            <td>@k.AcilisTarihi</td>
            <td>@k.KayitAcanUser</td>
            <td>@k.KayitOnaylayanUser</td>
            <td>@k.OnayStatusu</td>
            <td>@k.SonIslemTarihi</td>
            <td align="center">
                <a href="/TransactionTask/TransactionTaskGetir/@k.TransactionTaskid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/TransactionTask/TransactionTaskSil/@k.TransactionTaskid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
