@using mvc_net_Crm.Models.Siniflar
@model List<FinansalHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2><span style="color:red">.|Finans Islemleri </span>  .|Tahsilat .|Odeme .|Para Yatirma .|Para Cekme </h2>
<br />

<table id="tbl1" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarih</th>
            <th>Cari</th>
            <th>BelgeTuru</th>
            <th>CariHareketTuru</th>
            <th>FinansalHesap</th>
            <th>FinansHareketTuru</th>
            <th>Tutar</th>
            <th>OnayStatusu</th>
            <th style="width: 150px">#</th>
            <th style="width: 150px">#</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FinansalHareketid</td>
            <td>@k.Tarih</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.BelgeTuru</td>
            <td>@k.FinansalHareketTuruCari</td>
            <td>@k.FinansHesaplari.FinansHesapAdi</td>
            <td>@k.FinansalHareketTuruFinansHesap</td>
            <td>@k.Tutar.ToString("###,##0.00")</td>
            <td>@k.OnayStatusu</td>
            <td align="center">
                <a href="/FinansalHareket/FinansalHareketGetir/@k.FinansalHareketid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/FinansalHareket/FinansalHareketSil/@k.FinansalHareketid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/FinansalHareket/FinansalHareketEkle" class="btn btn-primary">Yeni Finansal Islem</a>


