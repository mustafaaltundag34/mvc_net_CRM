@using mvc_net_Crm.Models.Siniflar
@model List<StokHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Stok Hareketleri (Sevk Irsaliyeleri)</h2>
<br />

<table id="tbl1" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tarih</th>
            <th>Urun</th>
            <th>Cari</th>
            <th>Ambar</th>
            <th>H.Turu</th>
            <th>Adet</th>
            <th>OnayStatusu</th>
            <th style="width: 150px">#</th>
            <th style="width: 150px">#</th>
            <th style="width: 150px">#</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.StokHareketid</td>
            <td>@k.Tarih.ToString("dd.MM.yyyy")</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Ambar.AmbarAdi</td>
            <td>@k.StokHareketTuru</td>
            <td>@k.Adet</td>
            <td>@k.OnayStatusu</td>
            <td align="center">
                <a href="/StokHareket/StokHareketDetay/@k.StokHareketid" class="btn btn-success"><i class="fas fa-database"></i> Detaylar</a>
            </td>
            <td align="center">
                <a href="/StokHareket/StokHareketGetir/@k.StokHareketid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/StokHareket/StokHareketSil/@k.StokHareketid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/StokHareket/StokHareketEkle" class="btn btn-primary">Yeni Stok Hareket Islemi</a>


