@using mvc_net_Crm.Models.Siniflar;
@model List<Parametre>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Parametre Ekrani</h2>
<br />
<table id="tbl1" class="table table-striped table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <!--<th>ID</th>-->
            <th>Parametre Turu</th>
            <th>Parametre Aciklamasi</th>
            <th>Parametre Durum</th>
            <th style="width: 150px" align="center">#</th>
            <th style="width: 150px" align="center">#</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <!--<td>@k.ParametreID</td>-->
            <td>@k.ParametreTuru</td>
            <td>@k.ParametreAciklamasi</td>
            <td>@k.Durum</td>
            <td align="center">
                <a href="/Parametre/ParametreGetir/@k.ParametreID" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/Parametre/ParametreSil/@k.ParametreID" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Parametre/ParametreEkle" class="btn btn-primary">Parametre Ekle</a>



