@using mvc_net_Crm.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adi : @ViewBag.dgr1</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Departman ID</th>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Satislar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Departmanid</td>
            <td>@x.Personelid</td>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td>@x.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelStokHareket/@x.Personelid" class="btn btn-default" style="background-color:limegreen">Satislar</a></td>
        </tr>
    }
</table>
