@using mvc_net_Crm.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2><span style="color:red">.|Cari Hesap </span> .|Cari Hesap Kart Ekranlari</h2>
<br />
<table id="tbl1" class="table table-striped table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>Cari ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Sehir</th>
            <th>CariBakiye</th>
            <th>#</th>
            <th>#</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariBakiye.ToString("###,##0.00")</td>
            <td>
                @if (x.CariBakiye > 0)
                {<span style="color:green">ALACAKLI</span>}
                else if (x.CariBakiye == 0)
                {<span></span>}
                else if (x.CariBakiye < 0)
                {<span style="color:red">BORCLU</span>}
            </td>
            <td align="center">
                <a href="/Cari/CariGetir/@x.Cariid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            @*<td align="center">
            <a href="/Cari/MusteriStokHareket/@x.Cariid" class="btn btn-success" align="right"><i class="fas fa-database"></i> Cari Hareketler</a>
        </td>*@
            <td align="center">
                <a href="/Cari/CariHareketALL/@x.Cariid" class="btn btn-success" align="right"><i class="fas fa-database"></i> Cari Hareketler</a>
            </td>
            <td align="center">
                <a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Cari/CariEkle/" class="btn btn-primary"><i class="fas fa-user"></i>Yeni Cari Ekle</a>


