@model mvc_net_Crm.Models.Siniflar.faturaKalem
@{
    ViewBag.Title = "FaturaKalemEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Fatura Kalem Ekle</h2>
<br />
<form class="form-group" method="post">
    <br />
    @Html.LabelFor(x => x.Faturaid)
    @Html.TextBoxFor(x => x.Faturaid, new { @Value = ViewBag.dgr4, @readonly = "true", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.StokHareketTuru)
    @Html.TextBoxFor(x => x.StokHareketTuru, new { @Value = ViewBag.dgr5, @readonly = "true", @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Urunid)
    @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Ambarid)
    @Html.DropDownListFor(x => x.Ambarid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BirimFiyat)
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>

</form>



