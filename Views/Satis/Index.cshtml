@using mvc_net_Crm.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satis Hareketleri</h2>
<br />

<table class="table table-striped table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Tarih</th>
        <th>Cari</th>
        <th>Urun</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Personel</th>
        <th>Durum</th>
        <th style="width: 150px">#</th>
        <th style="width: 150px">#</th>
        <th style="width: 150px">#</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Satisid</td>
            <td>@k.Tarih</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Personel.PersonelAd</td>
            <td>@k.Durum</td>
            <td align="center">
                <a href="/Satis/SatisGetir/@k.Satisid" class="btn btn-success"><i class="fas fa-database"></i> Detaylar</a>
            </td>
            <td align="center">
                <a href="/Satis/SatisGetir/@k.Satisid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/Satis/SatisSil/@k.Satisid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Satis/SatisEkle" class="btn btn-primary">Yeni Satis Islemi</a>

