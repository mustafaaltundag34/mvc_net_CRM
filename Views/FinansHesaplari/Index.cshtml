@using mvc_net_Crm.Models.Siniflar
@model List<FinansHesaplari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Finans Hesaplari</h2>
<br />
<table id="tbl1" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>FinansHesapAdi</th>
            <th>FinansHesapTuru</th>
            <th style="width: 300px">Bakiye</th>
            <th style="width: 300px" align="center">#</th>
            <th style="width: 300px" align="center">#</th>
            <th style="width: 300px" align="center">#</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.FinansHesapid
            </td>
            <td>
                @k.FinansHesapAdi
            </td>
            <td>
                @k.FinansHesapTuru
            </td>
            <td>
                @k.FinansHesapBakiye
            </td>
            <td align="center">
                <a href="/FinansHesaplari/FinansHesapGetir/@k.FinansHesapid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/FinansHesaplari/FinansHareketleriALL/@k.FinansHesapid" class="btn btn-success" align="right"><i class="fas fa-database"></i> Hesap Hareketleri</a>
            </td>
            <td align="center">
                <a href="/FinansHesaplari/FinansHesapSil/@k.FinansHesapid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/FinansHesaplari/FinansHesapEkle" class="btn btn-primary">Finansal Hesap Ekle</a>



