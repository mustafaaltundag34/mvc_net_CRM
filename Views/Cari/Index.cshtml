@using mvc_net_Crm.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Cari Listesi</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Sehir</th>
        <th>Durum</th>
        <th>#</th>
        <th>#</th>
        <th>#</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.Durum</td>
            <td align="center">
                <a href="/Cari/CariGetir/@x.Cariid" class="btn btn-success"><i class="fas fa-database"></i> Guncelle</a>
            </td>
            <td align="center">
                <a href="/Cari/MusteriStokHareket/@x.Cariid" class="btn btn-success" align="right"><i class="fas fa-database"></i> Stok Hareketleri</a>
            </td>
            <td align="center">
                <a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger" align="right"><i class="fas fa-trash"></i> Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Cari/CariEkle/" class="btn btn-success"><i class="fas fa-user"></i>Yeni Cari Ekle</a>